bill=0
if size == 'L':
  bill=bill+25
  if add_pepperoni == 'Y':
      bill=bill+3
  if extra_cheese  =='Y':
      bill=bill+1
  print(f'Your final bill is: ${bill}.')
elif size == 'M':
  bill=bill+20
  if add_pepperoni == 'Y':
      bill=bill+3
  if extra_cheese  =='Y':
      bill=bill+1
  print(f'Your final bill is: ${bill}.')
elif size == 'S':
  bill=bill+15
  if add_pepperoni == 'Y':
      bill=bill+2
  if extra_cheese  =='Y':
      bill=bill+1
  print(f'Your final bill is: ${bill}.')











